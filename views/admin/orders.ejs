<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Заказы &mdash; Renome Admin</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="admin-body">

  <header class="admin-topbar">
    <a href="/admin" class="admin-topbar__logo">RENOME <span>Admin</span></a>
    <nav class="admin-topbar__nav">
      <a href="/admin" class="admin-topbar__link">Панель</a>
      <a href="/admin/menu" class="admin-topbar__link">Меню</a>
      <a href="/admin/orders" class="admin-topbar__link admin-topbar__link--active">Заказы</a>
      <a href="/admin/users" class="admin-topbar__link">Пользователи</a>
    </nav>
    <a href="/" class="admin-topbar__back">Назад на сайт</a>
  </header>

  <main class="admin-main">
    <div class="admin-main__header">
      <h1 class="admin-main__title">Заказы</h1>
      <div class="admin-filters">
        <a href="/admin/orders" class="admin-filter-btn <%= !currentStatus ? 'admin-filter-btn--active' : '' %>">Все</a>
        <a href="/admin/orders?status=new" class="admin-filter-btn <%= currentStatus === 'new' ? 'admin-filter-btn--active' : '' %>">Новые</a>
        <a href="/admin/orders?status=confirmed" class="admin-filter-btn <%= currentStatus === 'confirmed' ? 'admin-filter-btn--active' : '' %>">Подтверждённые</a>
        <a href="/admin/orders?status=cooking" class="admin-filter-btn <%= currentStatus === 'cooking' ? 'admin-filter-btn--active' : '' %>">Готовится</a>
        <a href="/admin/orders?status=delivery" class="admin-filter-btn <%= currentStatus === 'delivery' ? 'admin-filter-btn--active' : '' %>">Доставка</a>
        <a href="/admin/orders?status=completed" class="admin-filter-btn <%= currentStatus === 'completed' ? 'admin-filter-btn--active' : '' %>">Завершённые</a>
      </div>
    </div>

    <div class="admin-table-wrap">
      <table class="admin-table">
        <thead>
          <tr>
            <th>#</th>
            <th>Клиент</th>
            <th>Телефон</th>
            <th>Тип</th>
            <th>Сумма</th>
            <th>Статус</th>
            <th>Дата</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(o => { %>
            <tr>
              <td class="admin-table__name">#<%= o.id %></td>
              <td><%= o.customer_name %></td>
              <td><%= o.customer_phone %></td>
              <td><%= o.delivery_type === 'delivery' ? 'Доставка' : 'Самовывоз' %></td>
              <td class="admin-table__price"><%= o.total %> MDL</td>
              <td><span class="badge badge--<%= o.status %>"><%= o.status %></span></td>
              <td class="admin-table__date"><%= new Date(o.created_at).toLocaleString('ru-RU') %></td>
              <td><a href="/admin/orders/<%= o.id %>" class="btn btn--sm btn--outline">Детали</a></td>
            </tr>
          <% }) %>
          <% if (orders.length === 0) { %>
            <tr><td colspan="8" class="admin-table__empty">Заказы не найдены</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </main>
</body>
</html>
