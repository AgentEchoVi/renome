<%
  const L = lang === 'ru' ? {
    subtitle: 'Панель персонала',
    error: 'Неверный пароль',
    passwordPh: 'Пароль',
    login: 'Войти',
    downloadApp: 'Скачать приложение для Android'
  } : {
    subtitle: 'Panoul personalului',
    error: 'Parolă incorectă',
    passwordPh: 'Parola',
    login: 'Autentificare',
    downloadApp: 'Descarcă aplicația pentru Android'
  };
%>
<!DOCTYPE html>
<html lang="<%= lang %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
  <meta name="theme-color" content="#0D0D0D">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <title>Staff — Renome</title>
  <link rel="manifest" href="/manifest-staff.json">
  <link rel="icon" href="/img/logo.png">
  <link rel="apple-touch-icon" href="/img/logo.png">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/staff.css?v=9">
</head>
<body class="staff-login-body">
  <div class="staff-login">
    <div class="staff-login__card">
      <div class="staff-login__lang">
        <a href="/set-lang?lang=ro&redirect=/staff/login" class="staff-lang__btn<%= lang === 'ro' ? ' staff-lang__btn--active' : '' %>">RO</a>
        <a href="/set-lang?lang=ru&redirect=/staff/login" class="staff-lang__btn<%= lang === 'ru' ? ' staff-lang__btn--active' : '' %>">RU</a>
      </div>
      <div class="staff-login__logo">RENOME</div>
      <div class="staff-login__subtitle"><%= L.subtitle %></div>

      <% if (locals.error === 'invalid') { %>
        <div class="staff-error"><%= L.error %></div>
      <% } %>

      <form method="POST" action="/staff/login" class="staff-form">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="password" name="password" class="staff-input" required
          placeholder="<%= L.passwordPh %>" autocomplete="current-password" autofocus>
        <button type="submit" class="staff-btn"><%= L.login %></button>
      </form>

      <a href="/Renome-Staff.apk" download class="staff-download-app">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
        <%= L.downloadApp %>
      </a>
    </div>
  </div>
</body>
</html>
