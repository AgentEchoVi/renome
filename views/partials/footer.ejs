<footer class="footer-v2">
  <div class="footer-v2__top">
    <div class="container">
      <div class="footer-v2__grid">
        <div class="footer-v2__brand">
          <a href="/" class="footer-v2__logo">
            <img src="/img/logo.png" alt="Renome" class="footer-v2__logo-img">
            <span class="footer-v2__logo-text">RENOME</span>
          </a>
          <p class="footer-v2__desc"><%= t.footer?.desc || 'Cafenea italiană în Bălți, Moldova.' %></p>
          <div class="footer-v2__social">
            <a href="https://instagram.com/renome.balti" target="_blank" rel="noopener" aria-label="Instagram">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="2" width="20" height="20" rx="5"/><circle cx="12" cy="12" r="5"/><circle cx="17.5" cy="6.5" r="1.5" fill="currentColor" stroke="none"/></svg>
            </a>
            <a href="https://facebook.com" target="_blank" rel="noopener" aria-label="Facebook">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/></svg>
            </a>
          </div>
        </div>
        <div class="footer-v2__col">
          <h4 class="footer-v2__heading"><%= t.footer?.menuTitle || 'Meniu' %></h4>
          <nav class="footer-v2__links">
            <a href="/menu#pizza"><%= t.footer?.pizza || 'Pizza' %></a>
            <a href="/menu#paste"><%= t.footer?.burgeri || 'Paste' %></a>
            <a href="/menu#risotto"><%= t.footer?.gratar || 'Risotto' %></a>
            <a href="/menu#insalate"><%= t.footer?.salate || 'Salate' %></a>
            <a href="/menu#deserturi"><%= t.footer?.sushi || 'Deserturi' %></a>
            <a href="/menu#bauturi"><%= t.footer?.bauturi || 'Băuturi' %></a>
          </nav>
        </div>
        <div class="footer-v2__col">
          <h4 class="footer-v2__heading"><%= t.footer?.infoTitle || 'Informații' %></h4>
          <nav class="footer-v2__links">
            <a href="/menu"><%= t.footer?.fullMenu || 'Meniu complet' %></a>
            <a href="/#about"><%= t.footer?.aboutUs || 'Despre noi' %></a>
            <a href="/cart"><%= t.footer?.cartLink || 'Coș de cumpărături' %></a>
            <a href="/auth/login"><%= t.footer?.loginLink || 'Autentificare' %></a>
          </nav>
        </div>
        <div class="footer-v2__col">
          <h4 class="footer-v2__heading"><%= t.footer?.contactTitle || 'Contacte' %></h4>
          <div class="footer-v2__contact">
            <p><%= t.contact?.addressVal || 'str. Calea Ieșilor 57, Bălți' %></p>
            <p><a href="tel:+37378666613"><%= t.contact?.phoneVal || '+373 78 666 613' %></a></p>
            <p><%= t.footer?.scheduleWeek || 'Lun-Dum: 10:00 - 01:00' %></p>
            <p><%= t.footer?.scheduleWeekend || 'Zilnic, fără zile libere' %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="footer-v2__bottom">
    <div class="container">
      <div class="footer-v2__bottom-inner">
        <p>&copy; <%= new Date().getFullYear() %> Renome &middot; B&#259;l&#539;i, Moldova</p>
        <p class="footer-v2__dev">
          <%= lang === 'ru' ? 'Создано' : 'Creat de' %>
          <a href="javascript:void(0)" class="footer-v2__dev-link" onclick="document.getElementById('devCard').classList.add('dev-card--open')">Victor Siman</a>
          &middot; <a href="tel:+37379571474" class="footer-v2__dev-phone">+373 79 571 474</a>
        </p>
        <div class="footer-v2__tricolore">
          <span></span><span></span><span></span>
        </div>
      </div>
    </div>
  </div>
</footer>

