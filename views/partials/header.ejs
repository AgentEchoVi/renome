<!-- Italian tricolore stripe at very top -->
<div class="tricolore">
  <span class="tricolore__green"></span>
  <span class="tricolore__white"></span>
  <span class="tricolore__red"></span>
</div>

<header class="header" id="siteHeader">
  <div class="header__row">
    <a href="/" class="header__logo">
      <img src="/img/logo.png" alt="Renome Pizza" class="header__logo-img">
      <span class="header__logo-text">RENOME</span>
    </a>
    <nav class="header__nav" id="mainNav">
      <a href="/" class="header__nav-link <%= currentPath === '/' ? 'active' : '' %>"><%= t.nav.home %></a>
      <span class="header__nav-dot">&middot;</span>
      <a href="/menu" class="header__nav-link <%= currentPath === '/menu' ? 'active' : '' %>"><%= t.nav.menu %></a>
      <span class="header__nav-dot">&middot;</span>
      <a href="/#about" class="header__nav-link"><%= t.nav.about %></a>
      <span class="header__nav-dot">&middot;</span>
      <a href="/#contact" class="header__nav-link"><%= t.nav.contacts %></a>
      <% if (user && user.role === 'admin') { %>
        <span class="header__nav-dot">&middot;</span>
        <a href="/admin" class="header__nav-link">Admin</a>
      <% } %>
    </nav>
    <div class="header__actions">
      <div class="header__lang">
        <a href="/set-lang?lang=ro&redirect=<%= encodeURIComponent(currentPath) %>" class="header__lang-btn <%= lang === 'ro' ? 'active' : '' %>">RO</a>
        <span class="header__lang-sep">/</span>
        <a href="/set-lang?lang=ru&redirect=<%= encodeURIComponent(currentPath) %>" class="header__lang-btn <%= lang === 'ru' ? 'active' : '' %>">RU</a>
      </div>
      <a href="/cart" class="header__cart" id="headerCartBtn">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M6 2L3 6v14a2 2 0 002 2h14a2 2 0 002-2V6l-3-4z"/><line x1="3" y1="6" x2="21" y2="6"/><path d="M16 10a4 4 0 01-8 0"/></svg>
        <span id="headerCartBadge" class="header__cart-badge"></span>
      </a>
      <% if (user) { %>
        <a href="/account" class="header__user-btn"><%= user.name.charAt(0) %></a>
      <% } else { %>
        <a href="/auth/login" class="header__login"><%= t.nav?.login || 'Login' %></a>
      <% } %>
      <button class="header__burger" id="burgerBtn" aria-label="Menu">
        <span></span><span></span><span></span>
      </button>
    </div>
  </div>
  <!-- Mobile nav overlay -->
  <div class="mobile-nav" id="mobileNav">
    <div class="mobile-nav__content">
      <div class="mobile-nav__header">
        <a href="/" class="mobile-nav__logo">
          <img src="/img/logo.png" alt="Renome" class="mobile-nav__logo-img">
          <span class="mobile-nav__logo-text">RENOME</span>
        </a>
        <button class="mobile-nav__close" id="mobileNavClose" aria-label="Close">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
        </button>
      </div>

      <div class="mobile-nav__lang">
        <a href="/set-lang?lang=ro&redirect=<%= encodeURIComponent(currentPath) %>" class="mobile-nav__lang-btn <%= lang === 'ro' ? 'active' : '' %>">Română</a>
        <a href="/set-lang?lang=ru&redirect=<%= encodeURIComponent(currentPath) %>" class="mobile-nav__lang-btn <%= lang === 'ru' ? 'active' : '' %>">Русский</a>
      </div>

      <nav class="mobile-nav__links">
        <a href="/" class="mobile-nav__link <%= currentPath === '/' ? 'active' : '' %>">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
          <span><%= t.nav.home %></span>
        </a>
        <a href="/menu" class="mobile-nav__link <%= currentPath === '/menu' ? 'active' : '' %>">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M18 8h1a4 4 0 010 8h-1"/><path d="M2 8h16v9a4 4 0 01-4 4H6a4 4 0 01-4-4V8z"/><line x1="6" y1="1" x2="6" y2="4"/><line x1="10" y1="1" x2="10" y2="4"/><line x1="14" y1="1" x2="14" y2="4"/></svg>
          <span><%= t.nav.menu %></span>
        </a>
        <a href="/#about" class="mobile-nav__link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="12" y1="16" x2="12" y2="12"/><line x1="12" y1="8" x2="12.01" y2="8"/></svg>
          <span><%= t.nav.about %></span>
        </a>
        <a href="/#contact" class="mobile-nav__link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72c.127.96.361 1.903.7 2.81a2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0122 16.92z"/></svg>
          <span><%= t.nav.contacts %></span>
        </a>

        <div class="mobile-nav__divider"></div>

        <a href="/cart" class="mobile-nav__link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M6 2L3 6v14a2 2 0 002 2h14a2 2 0 002-2V6l-3-4z"/><line x1="3" y1="6" x2="21" y2="6"/><path d="M16 10a4 4 0 01-8 0"/></svg>
          <span><%= t.nav?.cart || 'Корзина' %></span>
          <span class="mobile-nav__badge" id="mobileCartBadge"></span>
        </a>
        <% if (user) { %>
          <a href="/account" class="mobile-nav__link">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
            <span><%= t.nav?.account || t.nav?.myAccount || 'Аккаунт' %></span>
          </a>
          <% if (user.role === 'admin') { %>
            <a href="/admin" class="mobile-nav__link">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 00.33 1.82l.06.06a2 2 0 010 2.83 2 2 0 01-2.83 0l-.06-.06a1.65 1.65 0 00-1.82-.33 1.65 1.65 0 00-1 1.51V21a2 2 0 01-4 0v-.09A1.65 1.65 0 009 19.4a1.65 1.65 0 00-1.82.33l-.06.06a2 2 0 01-2.83-2.83l.06-.06A1.65 1.65 0 004.68 15a1.65 1.65 0 00-1.51-1H3a2 2 0 010-4h.09A1.65 1.65 0 004.6 9a1.65 1.65 0 00-.33-1.82l-.06-.06a2 2 0 012.83-2.83l.06.06A1.65 1.65 0 009 4.68a1.65 1.65 0 001-1.51V3a2 2 0 014 0v.09a1.65 1.65 0 001 1.51 1.65 1.65 0 001.82-.33l.06-.06a2 2 0 012.83 2.83l-.06.06A1.65 1.65 0 0019.4 9a1.65 1.65 0 001.51 1H21a2 2 0 010 4h-.09a1.65 1.65 0 00-1.51 1z"/></svg>
              <span>Админ</span>
            </a>
          <% } %>
        <% } else { %>
          <a href="/auth/login" class="mobile-nav__link">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h4a2 2 0 012 2v14a2 2 0 01-2 2h-4"/><polyline points="10 17 15 12 10 7"/><line x1="15" y1="12" x2="3" y2="12"/></svg>
            <span><%= t.nav?.login || 'Войти' %></span>
          </a>
        <% } %>
      </nav>

      <div class="mobile-nav__footer">
        <a href="https://instagram.com/renome.balti" class="mobile-nav__social" target="_blank" rel="noopener">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>
          <span>@renome.balti</span>
        </a>
      </div>
    </div>
  </div>
</header>
