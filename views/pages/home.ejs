<!DOCTYPE html>
<html lang="<%= lang %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="<%= t.meta?.homeDesc || 'Renome - cafenea italiana in Balti, Moldova' %>">
  <title><%= t.meta?.homeTitle || 'Renome - Cafenea Italiana | Balti, Moldova' %></title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="home-page">
  <%- include('../partials/header') %>

  <div class="dark-zone">
    <!-- Hero — split: text left, logo right -->
    <section class="hero">
      <div class="hero__bg"></div>
      <div class="hero__split">
        <div class="hero__left">
          <p class="hero__tag"><%= t.hero?.badge || 'Cafenea Italiană în Bălți' %></p>
          <h1 class="hero__title"><%- t.hero?.title || 'Bucătăria italiană <em>autentică</em>' %></h1>
          <div class="hero__line"></div>
          <p class="hero__text"><%= t.hero?.subtitle || 'Pizza artizanală, paste proaspete, risotto și deserturi italiene.' %></p>
          <div class="hero__actions">
            <a href="/menu" class="btn btn--gold btn--lg"><%= t.hero?.viewMenu || 'Vezi Meniul' %></a>
            <a href="tel:<%= t.contact?.phoneVal || '+37378666613' %>" class="btn btn--red btn--lg"><%= t.hero?.callUs || 'Sună-ne' %></a>
          </div>
        </div>
        <div class="hero__right">
          <div class="hero__logo-wrap">
            <div class="hero__logo-glow"></div>
            <img src="/img/logo.png" alt="Renome Pizza" class="hero__logo-img">
          </div>
        </div>
      </div>
    </section>

    <!-- Explore our menu — categories -->
    <section class="section section--dark" id="categories">
      <div class="container">
        <div class="section__header text-center">
          <p class="section__tag section__tag--light"><%= t.categories?.tag || 'Esplora il menu' %></p>
          <h2 class="section__title section__title--light"><%= t.categories?.title || 'Ce preparăm' %></h2>
        </div>
        <div class="cat-grid">
          <% categories.forEach(cat => { %>
            <a href="/menu#<%= cat.slug %>" class="cat-card" style="background-image:url('/img/cat/<%= cat.slug %>.jpg')">
              <span class="cat-card__name"><%= L(cat, 'name', lang) %></span>
            </a>
          <% }) %>
        </div>
      </div>
    </section>
  </div>

  <!-- Instagram Feed — Embedded Posts -->
  <%
    const instaPosts = [
      { type: 'post', code: 'DQoTIwzjT2r' },
      { type: 'post', code: 'DQAJQkZjUza' },
      { type: 'post', code: 'DLNA3xuNPnz' }
    ];
    const hasRealPosts = true;
  %>
  <section class="section instagram-section">
    <div class="container">
      <div class="section__header text-center">
        <div class="instagram-section__icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="2" width="20" height="20" rx="5"/><circle cx="12" cy="12" r="5"/><circle cx="17.5" cy="6.5" r="1.5" fill="currentColor" stroke="none"/></svg>
        </div>
        <p class="section__tag"><%= t.instagram?.tag || 'Urmărește-ne pe Instagram' %></p>
        <h2 class="section__title"><%= t.instagram?.title || 'Din viața Renome' %></h2>
        <p class="section__desc"><%= t.instagram?.subtitle || 'Atmosferă, preparate proaspete și momente din bucătăria noastră' %></p>
      </div>

      <div class="insta-embeds">
        <% instaPosts.forEach((post, i) => { %>
          <div class="insta-embed">
            <iframe
              src="https://www.instagram.com/<%= post.type === 'reel' ? 'reel' : 'p' %>/<%= post.code %>/embed/"
              frameborder="0"
              scrolling="no"
              allowtransparency="true"
              loading="lazy"
            ></iframe>
          </div>
        <% }) %>
      </div>

      <div class="instagram-section__cta">
        <a href="https://instagram.com/renome.balti" target="_blank" rel="noopener" class="btn btn--outline btn--lg instagram-section__btn">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="2" width="20" height="20" rx="5"/><circle cx="12" cy="12" r="5"/><circle cx="17.5" cy="6.5" r="1.5" fill="currentColor" stroke="none"/></svg>
          <%= t.instagram?.follow || 'Urmărește @renome.balti' %>
        </a>
      </div>
    </div>
  </section>

  <!-- About / Story section -->
  <section class="section about-v2" id="about">
    <div class="about-v2__bg"></div>
    <div class="container">
      <div class="about-v2__inner">
        <div class="about-v2__left">
          <p class="section__tag"><%= t.aboutSection?.tag || 'Despre noi' %></p>
          <h2 class="about-v2__title"><span class="c-green">Re</span><span class="c-white">no</span><span class="c-red">me</span></h2>
          <p class="about-v2__quote"><%= t.aboutSection?.subtitle || 'Cafenea pe motiv italian' %></p>
          <div class="about-v2__line"></div>
          <p class="about-v2__desc"><%= t.aboutSection?.desc || 'Un loc confortabil cu pizza autentică din cuptor pe lemne, paste proaspete și atmosferă italiană.' %></p>
        </div>
        <div class="about-v2__right">
          <div class="about-v2__cards">
            <div class="about-v2__card">
              <div class="about-v2__card-icon">
                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 21c-4-4-8-7.5-8-11a8 8 0 0116 0c0 3.5-4 7-8 11z"/><path d="M9.5 10h5M8 12.5h8"/></svg>
              </div>
              <div>
                <h3 class="about-v2__card-title"><%= t.aboutSection?.card1title || 'Pizza din cuptor pe lemne' %></h3>
                <p class="about-v2__card-text"><%= t.aboutSection?.card1desc || 'Aluat făcut manual, sos de roșii italiene și căldura lemnelor adevărate' %></p>
              </div>
            </div>
            <div class="about-v2__card">
              <div class="about-v2__card-icon">
                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M3 2l1.5 5H20l-1.5 5H6"/><circle cx="8" cy="20" r="1.5"/><circle cx="16" cy="20" r="1.5"/><path d="M5.5 7l1 8h11l1-8"/></svg>
              </div>
              <div>
                <h3 class="about-v2__card-title"><%= t.aboutSection?.card2title || 'Bucătărie și băuturi' %></h3>
                <p class="about-v2__card-text"><%= t.aboutSection?.card2desc || 'Paste, risotto, antipasti, deserturi — meniu italian complet' %></p>
              </div>
            </div>
            <div class="about-v2__card">
              <div class="about-v2__card-icon">
                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M9 18V5l12-2v13"/><circle cx="6" cy="18" r="3"/><circle cx="18" cy="16" r="3"/></svg>
              </div>
              <div>
                <h3 class="about-v2__card-title"><%= t.aboutSection?.card3title || 'Atmosferă și relaxare' %></h3>
                <p class="about-v2__card-text"><%= t.aboutSection?.card3desc || 'Interior confortabil, narghilea premium și muzică live în weekend' %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact section -->
  <section class="section contact-v2" id="contact">
    <div class="container">
      <div class="contact-v2__grid">
        <div class="contact-v2__info">
          <p class="section__tag"><%= t.contact?.tag || 'Contactează-ne' %></p>
          <h2 class="contact-v2__title"><%= t.contact?.title || 'Vino la Renome' %></h2>
          <div class="contact-v2__items">
            <div class="contact-v2__item">
              <div class="contact-v2__item-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/><circle cx="12" cy="10" r="3"/></svg>
              </div>
              <div>
                <span class="contact-v2__item-label"><%= t.contact?.address || 'Adresă' %></span>
                <p class="contact-v2__item-val"><%= t.contact?.addressVal || 'str. Calea Ieșilor 57, Bălți' %></p>
              </div>
            </div>
            <div class="contact-v2__item">
              <div class="contact-v2__item-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6A19.79 19.79 0 012.12 4.18 2 2 0 014.11 2h3a2 2 0 012 1.72c.127.96.361 1.903.7 2.81a2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0122 16.92z"/></svg>
              </div>
              <div>
                <span class="contact-v2__item-label"><%= t.contact?.phone || 'Telefon' %></span>
                <p class="contact-v2__item-val"><a href="tel:<%= t.contact?.phoneVal || '+37378666613' %>"><%= t.contact?.phoneVal || '+373 78 666 613' %></a></p>
              </div>
            </div>
            <div class="contact-v2__item">
              <div class="contact-v2__item-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
              </div>
              <div>
                <span class="contact-v2__item-label"><%= t.contact?.schedule || 'Program' %></span>
                <p class="contact-v2__item-val"><%= t.contact?.scheduleWeek || 'Luni - Duminică: 10:00 - 01:00' %></p>
                <p class="contact-v2__item-val"><%= t.contact?.scheduleWeekend || 'Zilnic, fără zile libere' %></p>
              </div>
            </div>
            <div class="contact-v2__item">
              <div class="contact-v2__item-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="2" width="20" height="20" rx="5"/><circle cx="12" cy="12" r="5"/><circle cx="17.5" cy="6.5" r="1.5" fill="currentColor" stroke="none"/></svg>
              </div>
              <div>
                <span class="contact-v2__item-label"><%= t.contact?.social || 'Social' %></span>
                <p class="contact-v2__item-val"><a href="https://instagram.com/renome.balti" target="_blank" rel="noopener">@renome.balti</a></p>
              </div>
            </div>
          </div>
        </div>
        <div class="contact-v2__map">
          <iframe src="https://maps.google.com/maps?q=Calea+Ie%C8%99ilor+57,+B%C4%83l%C8%9Bi,+Moldova&t=&z=16&ie=UTF8&iwloc=&output=embed" width="100%" height="100%" style="border:0" allowfullscreen loading="lazy"></iframe>
        </div>
      </div>
    </div>
  </section>

  <%- include('../partials/footer') %>

  <div class="toast" id="toast">
    <span class="toast__text" id="toastText"></span>
  </div>

  <script>window.__t = { addedToCart: '<%= t.toast?.addedToCart || "added" %>' };</script>
  <script src="/js/cart.js"></script>
  <script src="/js/main.js"></script>
</body>
</html>
